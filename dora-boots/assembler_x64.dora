    let buffer = asm.finalize();
    asm3(buffer, 0, 0x48Y, 0x29Y, 0xD8Y);
    asm3(buffer, 3, 0x4CY, 0x29Y, 0xF9Y);
    assert(buffer.length == 6);
}

