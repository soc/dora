@test fun testAsmRetq(_x: Testing) {
    let asm = AssemblerX64();
    asm.retq();
    let buffer = asm.finalize();
    asm1(buffer, 0, 0xC3Y);
    assert(buffer.length == 1);
}

@test fun testAsmNop(_x: Testing) {
    let asm = AssemblerX64();
    asm.nop();
    let buffer = asm.finalize();
    asm1(buffer, 0, 0x90Y);
