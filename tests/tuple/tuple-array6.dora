//= vm-args "--gc=copy --disable-tlab --gc-stress"

class Foo (let value: Int)

fun main() {
    let x = Array[(Int, Foo)](1024);
    for i in range(0, x.length) {
        x(i) = (i, Foo(i));
    }
    forceCollect();
    for i in range(0, x.length) {
        assert(x(i).0 == i && x(i).0 == x(i).1.value);
    }
}