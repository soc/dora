//= vm-args "--gc=swiper --max-heap-size=128M"

class Foo (let value: Int)

fun main() {
    let x = Array[(Int, Foo)](32);
    forceMinorCollect();
    forceMinorCollect();
    for i in range(0, x.length) {
        x(i) = (i, Foo(i));
    }
    forceMinorCollect();
    for i in range(0, x.length) {
        assert(x(i).0 == i && x(i).0 == x(i).1.value);
    }
}